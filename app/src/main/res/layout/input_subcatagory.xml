<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_subcatagorycolor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/SubcatagoryInput"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@drawable/sub_catagory_input_"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/carbon_black_87"
            android:textColorHint="@color/carbon_black_54"
            android:layout_marginRight="@dimen/_10sdp"
            android:hint="Enter subcategory"
            android:layout_height="wrap_content">
        </EditText>



        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            app:cornerRadius="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/carbon_white"
            android:text="Insert"
            android:id="@+id/InsertButtonID"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content">

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>



</RelativeLayout>